/* pages/operation/operation.wxss */
page{
  background-color: #b3d4db;
}
.container{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
  
}
.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
  
}
.row textarea{
  width: 15rem;
  height: 15rem;
  font-size: 0.7rem;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;

}
.row input{
  width: 15rem;
  font-size: 0.7rem;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
}
.row button{
  margin-top: 3rem;
}