<!--pages/operation.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="row">
      <text>留言板：</text>
      <!--<input  class="message" type="text" name="areaName" placeholder="请输入要发布信息" value="{{areaName}}" />-->
      <textarea name="areaName" placeholder="请输入要发布信息" value="{{areaName}}"></textarea>
    </view>
    <view class="row">
      <text>优先级：</text>
      <input type="number" name="priority" placeholder="数值越大越靠前" value="{{priority}}" />
    </view>
    <view class="row">
      <button size="mini" type="primary" plain="true" form-type="submit">提交</button>
      <button size="mini" type="primary" plain="true" form-type="reset">清空</button>
    </view>
  </form>
</view>