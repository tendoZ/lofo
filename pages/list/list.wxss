/* pages/list/list.wxss */
page{
  background-color: #b3d4db;
}
.widget {
  position: relative;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border: #ddd 1px solid;
}
.container {
  height: 100%;
  display: table;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: left;
}
.column {
  width: 20rem;
  display: table-cell;
}

.link-column {
  width: 6rem;
  display: table-cell;
  vertical-align: bottom;
}

.link {
  color: blue;
  display: inline-table;
}
